---
import Layout from '../layouts/Layout.astro'
import '../styles/pages/events.scss'

var events = [
    {
        "title": "Community Garden Workday",
        "date": "July 15",
        "time": "1:00 AM - 5:00 PM",
        "location": "Clark Kerr Community Garden",
        "description": "Help compost food waste and tend our community garden. No experience needed."
    },
    {
        "title": "Food Drive",
        "date": "August 1",
        "time": "9:00 AM - 12:00 PM, 1:00 PM - 4:00 PM",
        "location": "Sproul Plaza",
        "description": "Collect unused food to support local shelters and food banks."
    },
    {
        "title": "Sustainability Workshop",
        "date": "September 10",
        "time": "1:00 PM - 3:00 PM",
        "location": "MLK Student Union",
        "description": "Workshop on sustainable living practices and food waste reduction."
    },
    {
        "title": "Volunteer Orientation",
        "date": "September 20",
        "time": "3:00 PM - 4:00 PM",
        "location": "Dwinelle Hall, Room 105",
        "description": "Learn about volunteer opportunities and upcoming events."
    },
    {
        "title": "Harvest Festival",
        "date": "October 5",
        "time": "1:00 PM - 5:00 PM",
        "location": "Clark Kerr Community Garden",
        "description": "Celebrate the harvest with fresh produce, tours, and activities."
    }
]

---
<Layout title="Upcoming Events">
    <section class="title__parent no-padding">
        <h1 class="page-title">Upcoming Events</h1>
        <div class="events">
            {
                events.map(event => {
                    return (
                        <div class="event">
                            <div class="event__date">
                                <span class="event__month">{event.date.split(' ')[0]}</span>
                                <span class="event__day">{event.date.split(' ')[1]}</span>
                            </div>
                            <div class="event__info">
                                <h3 class="event__title">{event.title}</h3>
                                <p>{event.description}</p>
                            </div>
                        </div>
                    )
                })
            }
        </div>
    </section>
</Layout>