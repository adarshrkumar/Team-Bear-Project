---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/hero.astro'
import Split from '../components/split.astro'

import '../styles/pages/index.scss'
---
<Layout title="Home">
    <section class="split" style="--cols: 16;">
        <section class="hero__area ten-cols empty-section">
            <h1 class="centered">Transforming waste into hope: nourishing our community, sustaining our planet.</h1>
        </section>
        <section class="banner__parent six-cols empty-section">
            <img src="" alt="" class="banner__image" />
        </section>
    </section>
    <section class="split" style="--cols: 16;">
        <section class="home__news__parent six-cols empty-section">
            <h2>News</h2>
            <div class="home__news"></div>
        </section>
        <section class="home__events__parent ten-cols empty-section">
            <h2>Upcoming Events</h2>
            <div class="home__events"></div>
            <a class="btn fl-right" href="/events/">See Map + More</a>
        </section>
    </section>
</Layout>